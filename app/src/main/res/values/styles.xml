<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/opaque_red</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/opaque_red</item>
        <item name="colorAccent">@color/opaque_red</item>
        <item name="titleTextColor">@color/opaque_red</item>
        <item name="subtitleTextColor">@color/opaque_red</item>
    </style>

    <style name="TalkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">#df0000</item>
        <item name="colorAccent">@color/opaque_red</item>
        <item name="titleTextColor">@color/opaque_red</item>
        <item name="subtitleTextColor">@color/opaque_red</item>
    </style>

</resources>
